<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/testdb"/>
        <property name="username" value="spring"/>
        <property name="password" value="book"/>
    </bean>

    <bean id="userDao" class="com.springbook.user.dao.UserDao">
        <property name="dataSource" ref="dataSource"/> <!--UserDao 내에 아직 DataSource 사용하는 메서드 있어서 제거하지 않음-->
        <property name="jdbcContext" ref="jdbcContext" />
    </bean>

    <bean id="jdbcContext" class="com.springbook.user.dao.JdbcContext"> <!--추가된 JdbcContext 타입 빈-->
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>